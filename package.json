{
  "name": "react-viewport-utils",
  "version": "2.0.1",
  "description": "Utility components for working with the viewport in react",
  "main": "dist/commonjs.js",
  "module": "dist/esmodule.js",
  "types": "dist/types.d.ts",
  "source": "lib/index.ts",
  "sideEffects": false,
  "scripts": {
    "start": "parcel ./examples/index.html --dist-dir='examples-dist'",
    "precompile": "rm -rf dist",
    "compile": "parcel build ",
    "test": "jest",
    "fmt": "prettier --write \"lib/*.{ts,tsx}\"  \"examples/*.{ts,tsx}\"",
    "prepublish": "npm run compile",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garthenweb/react-viewport-utils"
  },
  "bugs": {
    "url": "https://github.com/garthenweb/react-viewport-utils/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": "Chrome 80, Firefox 80, Safari 13",
  "author": "Jannick Garthen <jannick.garthen@gmail.com>",
  "keywords": [
    "react",
    "viewport",
    "scroll",
    "dimensions",
    "size",
    "resize",
    "event",
    "observer",
    "window",
    "screen"
  ],
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-default": "^2.6.0",
    "@parcel/resolver-default": "^2.6.0",
    "@parcel/packager-ts": "^2.6.0",
    "@parcel/transformer-typescript-types": "^2.6.0",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "caniuse-lite": "^1.0.30001352",
    "coveralls": "^3.1.1",
    "jest": "^27.5.1",
    "parcel": "^2.6.0",
    "parcel-transformer-replace": "link:./bundler/parcel-transformer-replace",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^27.1.5",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "memoize-one": "^5.1.1 || ^6.0.0"
  },
  "peerDependencies": {
    "react": "^16.3.0 || ^17.0.0 || ^18.0.0"
  }
}
